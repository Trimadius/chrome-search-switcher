{
  "manifest_version": 3,
  "name": "Search Engine Switcher",
  "version": "1.0",
  "description": "Переключение между различными поисковыми системами.",
  "permissions": [
    "storage",
    "activeTab",
    "search"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  }
}